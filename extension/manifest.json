{
  "name": "Better Zeplin",
  "description": "Better Zeplin",
  "version": "1.0.0",
  "manifest_version": 3,
  "host_permissions": ["*://*/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "zelin_cors_rules",
        "enabled": true,
        "path": "zelin_cors_rules.json"
      },
      {
        "id": "zelin_redirect_rules",
        "enabled": false,
        "path": "zelin_redirect_rules.json"
      }
    ]
  },
  "action": {
    "default_icon": {
      "16": "images/zeplinopeninapp16.png",
      "32": "images/zeplinopeninapp32.png",
      "48": "images/zeplinopeninapp48.png",
      "128": "images/zeplinopeninapp128.png"
    }
  },
  "permissions": [
    "contextMenus",
    "cookies",
    "scripting",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess"
  ],
  "icons": {
    "16": "images/zeplinopeninapp16.png",
    "32": "images/zeplinopeninapp32.png",
    "48": "images/zeplinopeninapp48.png",
    "128": "images/zeplinopeninapp128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
